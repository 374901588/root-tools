<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ZoeTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ZoeActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/ZoeActionBarTabViewStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ZoeTabTextStyle</item>
    </style>

    <style name="ZoeActionBarTabViewStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_holo</item>
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
    </style>

    <style name="ZoeActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:backgroundStacked">#FF0099CC</item>
    </style>
    
    <style name="ZoeTabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>
   

</resources>