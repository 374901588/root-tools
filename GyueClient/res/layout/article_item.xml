<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="80dip" android:paddingLeft="6dip"
	android:paddingRight="6dip" android:background="@color/white">

	<TextView android:id="@+id/article_title"
		android:layout_width="fill_parent" android:layout_height="24dip"
		android:textSize="20dip" android:textColor="@color/black"
		android:gravity="left|center_vertical"
		android:singleLine="true" android:ellipsize="end" android:maxLines="1"
		android:layout_toLeftOf="@+id/article_image" />

	<TextView android:id="@+id/article_desc"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="left|center_vertical" android:maxLines="2"
		android:layout_below="@+id/article_title"
		android:layout_above="@+id/article_date"
		android:layout_toLeftOf="@+id/article_image" />
	
	<TextView android:id="@+id/article_date"
	    android:layout_width="fill_parent"
	    android:layout_height="16dip"
	    android:layout_alignParentBottom="true"
	    android:gravity="right|center_vertical"/>

	<ImageView android:id="@+id/article_image"
		android:layout_width="80dip" android:layout_height="50dip"
		android:layout_marginBottom="8dip"
		android:layout_marginLeft="8dip"
		 android:layout_alignParentRight="true"
		android:background="@drawable/recommend"
		android:layout_above="@+id/article_date" />

</RelativeLayout>
