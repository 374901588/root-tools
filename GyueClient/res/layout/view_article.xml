<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/layTitleBar"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/bottombar" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_margin="4dip"
            android:background="@drawable/button_style"
            android:text="@string/back"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="90dip"
            android:layout_height="48dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/reading"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <ProgressBar
            android:id="@+id/pbRefreshing"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dip"
            android:visibility="gone" />
        
        <RelativeLayout android:id="@+id/layZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            >
            <Button android:id="@+id/btnZoomIn"
                android:layout_width="32dip"
                android:layout_height="32dip"
               	android:background="@drawable/zoomin"/>
            <Button android:id="@+id/btnZoomOut"
                android:layout_width="32dip"
                android:layout_height="32dip"
               	android:background="@drawable/zoomout"
               	android:layout_toRightOf="@+id/btnZoomIn"/>
            
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/layContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layTitleBar"
        android:layout_above="@+id/layBottom"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layToolBar"
                android:layout_width="fill_parent"
                android:layout_height="40dip" >

                <TextView
                    android:id="@+id/tvSeeWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="left|center_vertical"
                    android:text="@string/see_web"
                    android:textColor="@color/blue" />

                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imgShareTencent"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dip"
                    android:background="@drawable/tencent_logo" />

                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imgShareSina"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dip"
                    android:layout_toLeftOf="@+id/imgShareTencent"
                    android:background="@drawable/sina_logo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/silver" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layToolBar"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="4dip"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="4dip"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tvArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:layout_marginTop="4dip"
                android:autoLink="all"
                android:gravity="left|top"
                android:textColor="@color/black" />
           	<TextView android:id="@+id/tvDownloadApk"
           	    android:layout_width="fill_parent"
           	    android:layout_height="48dip"
           	    android:gravity="center"
           	    android:textColor="@color/green"
           	    android:textStyle="bold"
           	    android:textSize="20dip"
           	    android:text="@string/click_download"
           	    android:visibility="gone"
           	    android:layout_below="@+id/tvArticle"/>
           	
           	<RelativeLayout
                android:id="@+id/layToolBarBottom"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/tvDownloadApk" >

                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imgShareTencent2"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dip"
                    android:background="@drawable/tencent_logo" />

                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imgShareSina2"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dip"
                    android:layout_toLeftOf="@+id/imgShareTencent2"
                    android:background="@drawable/sina_logo" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_back"
        android:padding="16dip"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/pbLoading"
            android:text="@string/loading_article"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laySharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_back"
        android:padding="16dip"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbSharing"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvSharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/pbSharing"
            android:text="@string/sharing_article"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layBottom"
        android:layout_width="fill_parent"
        android:layout_height="16dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombar" />

</RelativeLayout>