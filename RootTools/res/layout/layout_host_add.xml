<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <HorizontalScrollView
            android:id="@+id/laySitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="?android:attr/buttonBarStyle">

            <Button
                    android:id="@+id/btnCom"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".com"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnOrg"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".org"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnNet"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".net"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnEdu"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".edu"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnInfo"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".info"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnBiz"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".biz"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnCn"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".cn"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnUs"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".us"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnJp"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".jp"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnHk"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".hk"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

            <Button
                    android:id="@+id/btnTw"
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:text=".tw"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
            android:id="@+id/lvAddHosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/barAddHosts"
            android:layout_below="@+id/laySitBtn"
            android:fastScrollEnabled="true">
    </ListView>

    <com.rarnu.devlib.component.DataBar
            android:id="@+id/barAddHosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    <com.rarnu.devlib.component.DataProgressBar
            android:id="@+id/progressSearchHosts"
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

</RelativeLayout>