<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:padding="4dip" >

    <ImageView
        android:id="@+id/pref_icon"
        android:layout_width="16dip"
        android:layout_height="32dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dip"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pref_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/pref_summary"
        android:layout_toLeftOf="@+id/pref_warning"
        android:layout_toRightOf="@+id/pref_icon"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pref_summary"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pref_warning"
        android:layout_toRightOf="@+id/pref_icon"
        android:gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/pref_warning"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dip"
        android:contentDescription="@null" />

</RelativeLayout>