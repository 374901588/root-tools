<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/white">

	<RelativeLayout android:id="@+id/layAssignedTop"
		android:layout_width="fill_parent" android:layout_height="48dip"
		android:background="@drawable/bottombar">

		<Button android:id="@+id/btnAssignedLeft" android:layout_width="48dip"
			android:layout_height="32dip" android:background="@drawable/button_style"
			android:layout_centerVertical="true" android:layout_marginLeft="4dip"
			android:text="@string/back" android:textColor="@color/white"
			android:textSize="11dip" />

		<TextView android:id="@+id/tvAssignedPageName"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_toRightOf="@+id/btnAssignedLeft" android:textColor="@color/white"
			android:textSize="20dip" android:gravity="center"
			android:layout_marginRight="36dip" android:text="@string/page_assignedcard" />

	</RelativeLayout>

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/layAssignedTop"
		android:layout_margin="4dip">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@color/gray">

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_margin="1dip"
				android:background="@color/white">

				<TextView android:id="@+id/tvAssignedMasterName"
					android:layout_width="fill_parent" android:layout_height="24dip"
					android:textColor="@color/black" android:textSize="16dip"
					android:gravity="center" android:text="@string/top100_date"
					android:layout_margin="4dip" />

				<ListView android:id="@+id/lvAssignedCard"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					android:layout_margin="4dip" android:cacheColorHint="#00000000"
					android:layout_below="@+id/tvAssignedMasterName" android:divider="@color/gray"
					android:dividerHeight="1dip" />
			</RelativeLayout>

		</RelativeLayout>

	</RelativeLayout>
</RelativeLayout>
