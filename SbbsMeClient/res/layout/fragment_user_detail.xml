<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_margin="8dip" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_margin="8dip"
        android:layout_toRightOf="@+id/ivHead"
        android:gravity="left|center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAccountType"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_below="@+id/ivHead"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:gravity="left|center_vertical"
        android:text="@string/user_account_type"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAccountTypeValue"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_below="@+id/ivHead"
        android:layout_marginRight="8dip"
        android:layout_toRightOf="@+id/tvAccountType"
        android:gravity="left|center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSplit"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/tvAccountType"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@color/google_light_green" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSplit"
        android:text="Logout" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dip"
        android:background="@color/google_light_green"
        android:gravity="center"
        android:padding="4dip"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>