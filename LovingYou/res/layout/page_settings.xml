<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dip" >

    <RelativeLayout
        android:id="@+id/layHint1"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginTop="8dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvHint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="16dip"
            android:gravity="left|center_vertical"
            android:text="@string/hint1"
            android:textColor="@color/white"
            android:textSize="22dip" />

        <TextView
            android:id="@+id/tvHintValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:layout_toRightOf="@+id/tvHint1"
            android:gravity="left|center_vertical"
            android:textColor="#FF999999"
            android:textSize="20dip" />

        <CheckBox
            android:id="@+id/chkHint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#FF222222" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layHint2"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/layHint1"
        android:layout_marginTop="8dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvHint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="16dip"
            android:gravity="left|center_vertical"
            android:text="@string/hint2"
            android:textColor="@color/white"
            android:textSize="22dip" />

        <TextView
            android:id="@+id/tvHintValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:layout_toRightOf="@+id/tvHint2"
            android:gravity="left|center_vertical"
            android:textColor="#FF999999"
            android:textSize="20dip" />

        <CheckBox
            android:id="@+id/chkHint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#FF222222" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layHint3"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/layHint2"
        android:layout_marginTop="8dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvHint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="16dip"
            android:gravity="left|center_vertical"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="22dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#FF222222" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layHint4"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/layHint3"
        android:layout_marginTop="8dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvHint4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="16dip"
            android:gravity="left|center_vertical"
            android:text="@string/donate"
            android:textColor="@color/white"
            android:textSize="22dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#FF222222" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layHint5"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/layHint4"
        android:layout_marginTop="8dip"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvHint5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="16dip"
            android:gravity="left|center_vertical"
            android:text="@string/about"
            android:textColor="@color/white"
            android:textSize="22dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#FF222222" />
    </RelativeLayout>

</RelativeLayout>