<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/white">

	<ImageView android:id="@+id/ivAppIcon" android:layout_width="40dip"
		android:layout_height="40dip" android:layout_margin="8dip" />

	<TextView android:id="@+id/tvAppName" android:layout_width="fill_parent"
		android:layout_height="28dip" android:textColor="@color/black"
		android:textSize="20dip" android:gravity="left|center_vertical"
		android:layout_toRightOf="@id/ivAppIcon" android:layout_marginLeft="4dip"
		android:layout_marginTop="4dip" android:layout_marginRight="4dip" />

	<TextView android:id="@+id/tvAppPackage" android:layout_width="fill_parent"
		android:layout_height="20dip" android:gravity="left|center_vertical"
		android:layout_toRightOf="@id/ivAppIcon" android:layout_below="@id/tvAppName"
		android:layout_marginLeft="4dip" android:layout_marginRight="4dip" />

	<TextView android:id="@+id/spl1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@color/gray"
		android:padding="4dip" android:layout_below="@id/tvAppPackage"
		android:layout_marginTop="8dip" android:layout_marginBottom="4dip"
		android:text="@string/registed_bcr" android:textColor="@color/black" />

	<ListView android:id="@+id/lvReceiver" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/spl1"
		android:cacheColorHint="@color/none" android:layout_above="@+id/tvOperateHint" />

	<TextView android:id="@+id/tvOperateHint"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:background="@color/gray"
		android:text="@string/operation_hint" android:padding="4dip"
		android:textColor="@color/black" />


</RelativeLayout>
